"use strict";

//module dependencies
var server   = require("../dist/server");
var debug    = require("debug")("express:server");
var http     = require("http");

var path = require("path")

//create http server
var httpPort = process.env.PORT || 8080;

// initialize server instance from class we defined
var app    = server.Server.bootstrap().app;
app.set('port', httpPort)
var server = http.Server(app);


/**
  run a barebones app here to figure out what's going on
  ok so this part works... now do this: 
*/
app.get('/', (req,res) => {
  res.status(200).send("hello world from my app!")
})


/**
  this should get serviced, so it is serviced here ... but not elsewhere
*/
// var html_rel_dir = "../public/bootstrap/Homepage/"
// app.get('/candidate-10', (req, res, next) => { 
//   var path_to_html = path.join(__dirname, html_rel_dir, 'candidate-1.html');
//   console.log(__dirname)
//   res.sendFile( path_to_html );
// });




// start listening on port `httpPort`
server.listen(httpPort);

// handle error
server.on("error", (err) => {

  if (error.syscall !== "listen") {
    throw error;
  }

  var bind = typeof port === "string"
    ? "Pipe " + port
    : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
})

server.on("listening", () => {

  var addr = server.address();
  var bind = typeof addr === "string"
    ? "pipe " + addr
    : "port " + addr.port;
  debug("Listening on " + bind);
})
